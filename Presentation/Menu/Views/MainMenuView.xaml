<Window x:Class="WpfAppTest.Presentation.Menu.Views.MainMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User app" Width="980" Height="640"
        Background="{StaticResource AppBackgroundBrush}">

    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="24"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="16"
                Padding="20">
            <StackPanel>
                <TextBlock Text="User Management"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Margin="0 0 0 18"/>

                <Button Content="Users"
                        Margin="0 0 0 10"
                        Command="{Binding ShowUsersListCommand}"/>

                <Button Content="Create User"
                        Command="{Binding ShowCreateUserCommand}"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Border Grid.Column="2"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="16"
                Padding="24">
            <ContentControl Content="{Binding CurrentViewModel}"/>
        </Border>
    </Grid>
</Window>
